<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:padding="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/translate_bar_height"
        app:cardCornerRadius="@dimen/translate_bar_radius">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/language_bar_bg">


            <TextView
                android:id="@+id/source_languages_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/from"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold"/>


            <ImageView
                android:id="@+id/swap_languages_image_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_swap_36dp"/>


            <TextView
                android:id="@+id/target_languages_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/to"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>