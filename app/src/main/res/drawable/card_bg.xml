<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/colorPlatinum"/>
            <corners android:radius="12dp"/>
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"/>

        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <stroke
                android:width="5dp"
                android:color="@color/colorBeautifulPurple"/>
            <corners android:radius="10dp"/>
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>

        </shape>
    </item>
</layer-list>